{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe arquivo de build ativo",
            "command": "clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "-ferror-limit=1",
                "-gdwarf-4",
                "-ggdb3",
                "-O0",
                "-std=c11",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-Wno-gnu-folding-constant",
                "-Wno-sign-compare",
                "-Wno-unused-parameter",
                "-Wshadow",
                "${fileDirname}\\${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Ed."
        }
    ],
    "version": "2.0.0"
}